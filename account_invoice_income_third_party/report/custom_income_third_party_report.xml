<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_custom_income_third_party" inherit_id="account.report_invoice_document">

            <xpath expr="//tr[@class='border-black o_total']" position="after">
                <tr class="border-black" style="">
                    <td>
                        <span t-field="o.product_id2"/>
                    </td>
                    <td class="text-right">
                        <span t-field="o.price_total2"/>
                    </td>
                </tr>
                <tr class="border-black" style="">
                    <td>
                        <strong>Total ingresos de terceros</strong>
                    </td>
                    <td class="text-right">
                        <span t-field="o.price_total2"/>
                    </td>
                </tr>
                <tr class="border-black" style="">
                    <td>
                        <strong>TOTAL A PAGAR:</strong></td>
                    <td class="text-right">
                        <span t-field="o.field_total"/>
                    </td>
                </tr>
            </xpath>
        </template>
    </data>
</odoo>