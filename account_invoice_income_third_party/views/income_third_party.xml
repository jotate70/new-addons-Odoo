<?xml version="1.0" encoding="UTF-8"?>
 <odoo>

    <!-- session form view -->
    <!-- creamos personalizaciÃ³n de vista heredada -->

    <data>

        <record model="ir.ui.view" id="account_income_third_party">
            <field name="name">account.invoice.income_third_party</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">

               <field name="payment_term_id" position="after" >
                   <field name="add_third" string="Activar ingreso para tercero"/>
               </field>

                <field name="invoice_line_ids" position="after" >
                        <group>
                            <field name="product_id2" attrs="{'invisible': ['|',('add_third', '=', False)]}" />
                            <field name="account_id2" attrs="{'invisible': ['|',('add_third', '=', False)]}" />
                            <field name="invoice_id2" attrs="{'invisible': ['|',('add_third', '=', False)]}" />
                            <field name="price_total2" string="Total: " attrs="{'invisible': ['|',('add_third', '=', False)]}" />
                        </group>
               </field>

                <field name="residual" position="after" >
                   <field name="field_total" string="Total a pagar: "/>
               </field>
            </field>
        </record>
    </data>
</odoo>