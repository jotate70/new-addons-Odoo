<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_return_picking_form_inherit_helpdesk_stock_extend" model="ir.ui.view">
            <field name="name">Return_extend</field>
            <field name="model">stock.return.picking</field>
            <field name="inherit_id" ref="helpdesk_stock.view_stock_return_picking_form_inherit_helpdesk_stock"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='suitable_picking_ids']" position="after">
                    <field name="location_domain"/>
                    <field name="location_origin_id"/>
                    <field name="picking_ids" invisible=""/>
                </xpath>
                <xpath expr="//field[@name='parent_location_id']" position="before">
                    <field name="product_return_moves_ids" nolabel="1">
                        <tree editable="top" create="0">
                            <field name="product_id" options="{'no_create': True, 'no_open': True}" force_save="1"/>
                            <field name="quantity"/>
                            <field name="wizard_id"/>
                            <field name="wizard_ids"/>
                            <field name="uom_id" groups="uom.group_uom"/>
                            <field name="move_id" invisible=""/>
                        </tree>
                    </field>
                </xpath>
                <!--            Vista de pickings -->
                <field name="picking_ids" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="picking_ids" position="after">
                    <div>
                        <label for="picking_ids" string="Envios para devolver:"/>
                        <field name="picking_ids" widget="many2many_tags"/>
                    </div>
                </field>
            </field>
        </record>
    </data>
</odoo>
